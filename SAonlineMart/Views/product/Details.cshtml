@model Product;

<div class="container" width="30%">
    <div class="card" >
        <div class="card-body">
            <h3 class="card-title">@Model.productName</h3>
            <h6 class="card-subtitle">@Model.productCategory</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Model.imageURL" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Product description</h4>
                    <p>@Model.productDescription</p>
                    <h2 class="mt-5">
                        R @Model.productPrice
                    </h2>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    <h3 class="box-title mt-5">@Model.productCategory</h3>
                </div>
            </div>
        </div>
    </div>
</div>

