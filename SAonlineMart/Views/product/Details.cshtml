@model Product;

<div class="container" >
    <div class="card">
        <div class="card-body" >
            <h3 class="card-title">@Model.productName</h3>
            <h6 class="card-subtitle">@Model.productCategory</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Model.imageURL" style ="width:50%" ></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Product description:</h4>
                    <textarea style="width: 100%;height:400px" readonly>@Model.productDescription</textarea>
                    <h2 class="mt-5">
                        R @Model.productPrice
                    </h2>               
                    @using (Html.BeginForm("Add", "Cart", FormMethod.Post))
                    {
                        <div data-mdb-input-init class="form-outline" style="width: 100%; padding:10px 0">
                        <input type="hidden" name="productId" value="@Model.ID" />
                            <label class="form-label" for="quantity"> Quantity:</label>
                        <input type="number" name="quantity" value="1" min="1" />
                        <button type="submit" class="btn btn-primary btn-rounded" >Add to Cart</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

