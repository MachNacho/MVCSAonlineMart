@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">PRODUCT PAGE</h1>
            <p class="lead text-body-secondary">Enjoy great products at AFRICA Something</p>
            <p>
            </p>
        </div>
    </div>
</section>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            <a asp-controller="product" asp-action="Details" asp-route-id="@item.ID" class="text-decoration-none text-reset">
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@item.imageURL" class="" width="100%" height="225" />
                        <div class="card-body">
                            <p class="card-text text-decoration-none">@item.productName</p>
                            <p class="card-text text-decoration-none">R @item.productPrice</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-body-secondary">@item.productCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
