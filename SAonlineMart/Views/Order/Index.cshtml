@model IEnumerable<Order>
<h1>Orders</h1>
@foreach(var item in Model)
{

	<a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id"class="text-decoration-none text-reset">
		<div class="container">
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" style="padding:10px 0">
				<div class="btn btn-primary">Order #: @item.Id</div>
			</div>
		</div>
	</a>

}
